<div class="info-tag-container flex items-center gap-x-2">
  {{#if icon}}
    <i class="{{icon}}"></i>
  {{/if}}

  {{#if url}}
    <h6 class="info-text">
      <a href="{{url}}" target="_blank">
        {{removeProtocol text}}
        <i class="fa-solid fa-external-link" aria-hidden="true"></i>
      </a>
    </h6>
  {{else}}
    <h6 class="info-text">{{{text}}}</h6>
  {{/if}}
</div>