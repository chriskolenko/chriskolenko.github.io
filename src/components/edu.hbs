{{#if resume.education.length}}
<section>
  {{> title-light value="Education"}}

  {{#each resume.education}}
  <div class="px-4 mt-4 space-y-2">
    <div class="flex border-b border-zinc-800">
      <h5 class="flex-auto py-1">
        <span class="font-medium">{{ area }}</span> | {{ institution }}
      </h5>
      <div class="flex-none text-right">
        <h5>
          {{#if startDate}}
          <span class="startDate">{{formatDateYear startDate}}</span>
          {{#if endDate}}
          <span class="endDate"> - {{formatDateYear endDate}}</span>
          {{else}}
          <span class="endDate"> - Present</span>
          {{/if}}
          {{else if releaseDate}}
          {{formatDate releaseDate}}
          {{/if}}
        </h5>
      </div>
    </div>
  </div>
  {{/each}}
</section>
{{/if}}
