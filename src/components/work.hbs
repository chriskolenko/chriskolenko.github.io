{{#if resume.work.length}}
<div class="container work-container space-y-4">
  {{> title-dark value="Experience"}}

  {{#each resume.work}}
  
  {{#if breakBefore}}
      <div class="break-before grid grid-cols-9 mx-2 sm:mx-4">
  {{else}}
      <div class="grid grid-cols-9 mx-2 sm:mx-4">
  {{/if}}
      <div class="text-center col-span-2 pr-4 ">
        <h5 class="">
          {{#if startDate}}
            <span class="startDate">{{formatDate startDate}}</span>
          {{#if endDate}}
            <span class="endDate"> - {{formatDate endDate}}</span>
          {{else}}
            <span class="endDate"> - Present</span>
          {{/if}}
          {{else if releaseDate}}
            {{formatDate releaseDate}}
          {{/if}}
        </h5>
      </div>
      <div class="col-span-7 text-left flex gap-x-4">
        <h5 class="tracking-wide">
          <span class="font-medium">{{position}}</span> â–º {{company}}
        </h5>
      </div>
    </div>

    {{#unless compact}}
      <div class="grid grid-cols-9 mx-2 sm:mx-4 text-left mt-2">
        <div class="col-start-3 col-span-7 ">
          {{#if summary}}
            <p class="summary">{{summary}}</p>
          {{/if}}

          {{#if highlights.length}}
            <ul class="list-outside ml-6 font-light">
              {{#each highlights}}
              <li class="list-disc">{{.}}</li>
              {{/each}}
            </ul>
          {{/if}}
        </div>
      </div>
    {{/unless}}
  </section>
  {{/each}}
</div>
{{/if}}