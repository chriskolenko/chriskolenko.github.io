{{#if resume.volunteer.length}}
<div class="container volunteer-container">
  {{> title-dark value="Volunteer"}}

  {{#each resume.volunteer}}
    <section class="item">
      {{#if breakBefore}}
        <div class="break-before grid grid-cols-9 mx-2 sm:mx-4">
      {{else}}
        <div class="grid grid-cols-9 mx-2 sm:mx-4">
      {{/if}}
        <div class="text-right col-span-2 pr-4 h-4">
          <h5 class="">
            {{#if startDate}}
              <span class="startDate">{{formatDate startDate}}</span>
            {{#if endDate}}
              <span class="endDate"> - {{formatDate endDate}}</span>
            {{else}}
              <span class="endDate"> - Present</span>
            {{/if}}
            {{else if releaseDate}}
              {{formatDate releaseDate}}
            {{/if}}
          </h5>
        </div>
        <div class="col-span-7 text-left flex gap-x-4">
          <h5 class="tracking-wide">
            <span class="font-medium">{{organization}}</span> â–º {{position}}
          </h5>
        </div>
      </div>
      <div class="grid grid-cols-9 mx-2 sm:mx-4 text-left mt-2">
        <div class="col-start-3 col-span-7 ">
          {{#if summary}}
            <p class="summary">{{summary}}</p>
          {{/if}}
        </div>
      </div>
    </section>
  {{/each}}
</div>
{{/if}}