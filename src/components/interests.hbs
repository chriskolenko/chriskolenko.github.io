{{#if resume.interests.length}}
<div class="container interests-container">
  {{> title value="Interests"}}

  {{#each resume.interests}}
    <section class="item">
      {{#if name}}
        <h6>{{name}}</h6>
      {{/if}}
      {{#if keywords.length}}
        <ul class="minimal">
          {{#each keywords}}
              <li>{{.}}</li>
          {{/each}}
        </ul>
      {{/if}}
    </section>
  {{/each}}
</div>
{{/if}}